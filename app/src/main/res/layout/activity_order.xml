<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_thanks"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bookmeds.youngagain.OrderActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/med_icon"
                android:layout_width="200dp"
                android:layout_height="200dp"
                tools:src="@drawable/anacin" />

            <TextView
                android:id="@+id/med_name"
                style="@style/TextAppearance.AppCompat.Display2"
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:textColor="#ff7b00"
                tools:text="Name" />

            <TextView
                android:id="@+id/med_details"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#dd6a00"
                tools:text="Details" />

            <TextView
                android:id="@+id/med_price"
                android:layout_width="wrap_content"
                android:textColor="#ff7b00"
                android:textAlignment="center"
                style="@style/TextAppearance.AppCompat.Large"
                tools:text="Price"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Quantity"
                android:layout_margin="20dp"
                android:textAlignment="center"
                android:textColor="#ff7b00"
                android:textColorHint="#ff7b00"
                android:inputType="number" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="buy"
                android:text="Buy" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
